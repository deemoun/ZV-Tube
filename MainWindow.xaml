<Window x:Class="YouTubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Downloader" Height="520" Width="720"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Поиск -->
            <RowDefinition Height="Auto"/>
            <!-- Статус -->
            <RowDefinition Height="*"/>
            <!-- Список -->
            <RowDefinition Height="Auto"/>
            <!-- Панель кнопок -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Что ищем на Ютубчике?" FontWeight="Bold" FontSize="14"/>

        <!-- Поисковая строка и кнопка -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5,0,5">
            <TextBox x:Name="SearchBox" Width="450" Height="30" Margin="0,0,10,0"
                     KeyDown="SearchBox_KeyDown"/>
            <Button x:Name="SearchButton" Content="🔎 Поиск" Width="100" Height="30"
                    Click="SearchButton_Click"
                    ToolTip="Найти видео по названию" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Статус -->
        <TextBlock x:Name="StatusText" Text="Результаты будут отображены после осуществления поиска"
                   Grid.Row="2" Foreground="Gray" Margin="0,0,0,10" FontSize="12"/>

        <!-- Список результатов -->
        <ListBox x:Name="ResultsList" Grid.Row="3"
                 SelectionChanged="ResultsList_SelectionChanged"
                 BorderBrush="#ccc" BorderThickness="1"
                 Margin="0,0,0,10"/>

        <!-- Панель кнопок внизу -->
        <Border Grid.Row="4" Background="#f2f2f2" Padding="10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопки слева -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="PlayVideoButton" Content="🎬 Играть видео" Width="120" Height="32" Margin="0,0,10,0"
                            Click="PlayButtonVideo_Click"
                            ToolTip="Воспроизвести видео через mpv"/>
                    <Button x:Name="PlayAudioButton" Content="🎧 Играть аудио" Width="120" Height="32"
                            Click="PlayButtonAudio_Click"
                            ToolTip="Воспроизвести только звук через mpv"/>
                </StackPanel>

                <!-- Кнопки справа -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <Button x:Name="DownloadButton" Content="💾 Скачать" Width="100" Height="32" Margin="0,0,10,0"
                            Click="DownloadButton_Click"
                            ToolTip="Скачать выбранное видео как аудио"/>
                    <Button x:Name="OpenFolderButton" Content="📁 Открыть папку" Width="120" Height="32"
                            Click="OpenFolderButton_Click"
                            ToolTip="Открыть папку с загруженными файлами"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
