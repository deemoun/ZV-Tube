<Window x:Class="YouTubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZV Tube v1.1.3 by DYA"
        Height="520" Width="800"
        WindowStartupLocation="CenterScreen">
    <DockPanel>

        <!-- Main menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="📁 File">
                <MenuItem Header="📂 Open download folder" Click="OpenFolderButton_Click"/>
                <Separator/>
                <MenuItem Header="❌ Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="⚙️ Actions">
                <MenuItem Header="🔊 Play audio" Click="PlayButtonAudio_Click"/>
                <MenuItem Header="🎞️ Play video" Click="PlayButtonVideo_Click"/>
            </MenuItem>
        </Menu>


        <!-- Main content -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="What are we searching on YouTube?" FontWeight="Bold" FontSize="14"/>

            <Grid Grid.Row="1" Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchBox" Width="450" Height="30"
                         VerticalAlignment="Center" Margin="0,0,10,0"
                         HorizontalAlignment="Left" FontSize="14"
                         KeyDown="SearchBox_KeyDown"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="SearchButton" Content="🔎 Search" Width="100" Height="30" Margin="0,0,10,0"
                            Click="SearchButton_Click" Cursor="Hand"/>
                    <Button x:Name="OpenFolderButton" Content="📁 Open folder" Width="120" Height="30"
                            Click="OpenFolderButton_Click"/>
                </StackPanel>
            </Grid>

            <TextBlock x:Name="StatusText" Grid.Row="2"
                       Text="Results will appear after you search"
                       Foreground="Green" Margin="0,0,0,10" FontSize="12"/>

            <Grid x:Name="ResultsContainer" Grid.Row="3">
                <ListView x:Name="ResultsList"
                          SelectionChanged="ResultsList_SelectionChanged"
                          Margin="0,0,0,10"
                          BorderBrush="#ccc" BorderThickness="1">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="🎬 Title" Width="280" DisplayMemberBinding="{Binding Title}" />
                            <GridViewColumn Header="📺 Channel" Width="180" DisplayMemberBinding="{Binding Uploader}" />
                            <GridViewColumn Header="👁 Views" Width="100" DisplayMemberBinding="{Binding Views}" />
                            <GridViewColumn Header="📅 Date" Width="180" DisplayMemberBinding="{Binding UploadDate}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Border Grid.Row="4" Background="#f2f2f2" Padding="10" CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="PlayVideoButton" Content="🎬 Play video" Width="120" Height="32" Margin="0,0,10,0"
                                Click="PlayButtonVideo_Click" Cursor="Hand"/>
                        <Button x:Name="PlayAudioButton" Content="🎧 Play audio" Width="120" Height="32"
                                Click="PlayButtonAudio_Click" Cursor="Hand"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                        <Button x:Name="DownloadButton" Content="💾 Download audio" Width="120" Height="32" Margin="0,0,10,0"
                                Click="DownloadButton_Click" Cursor="Hand"/>
                        <Button x:Name="DownloadVideoButton" Content="📹 Download video" Width="120" Height="32"
                                Click="DownloadVideoButton_Click" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>