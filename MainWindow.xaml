<Window x:Class="YouTubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZV Tube" Height="520" Width="720"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Что ищем на Ютубчике?" FontWeight="Bold" FontSize="14"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5,0,5">
            <TextBox x:Name="SearchBox" Width="450" Height="30" Margin="0,0,10,0"
                     KeyDown="SearchBox_KeyDown"/>
            <Button x:Name="SearchButton" Content="🔎 Поиск" Width="100" Height="30" Cursor="Hand"
                    Click="SearchButton_Click"
                    ToolTip="Найти видео по названию" VerticalContentAlignment="Center"/>
        </StackPanel>

        <TextBlock x:Name="StatusText" Text="Результаты будут отображены после осуществления поиска"
                   Grid.Row="2" Foreground="Red" Margin="0,0,0,10" FontSize="12"/>

        <!-- Список результатов -->
        <ListView x:Name="ResultsList"
                  Grid.Row="3"
                  SelectionChanged="ResultsList_SelectionChanged"
                  Margin="0,0,0,10"
                  BorderBrush="#ccc" BorderThickness="1"
                  MouseDoubleClick="ResultsList_MouseDoubleClick">
            <ListView.View>
                <GridView x:Name="ResultsGridView">
                    <GridViewColumn Header="🎬 Название" DisplayMemberBinding="{Binding Title}" Width="300"/>
                    <GridViewColumn Header="📺 Канал" DisplayMemberBinding="{Binding Uploader}" Width="180"/>
                    <GridViewColumn Header="👁 Просмотры" DisplayMemberBinding="{Binding Views}" Width="100"/>
                    <GridViewColumn Header="📅 Дата" DisplayMemberBinding="{Binding UploadDate}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Панель кнопок -->
        <Border Grid.Row="4" Background="#f2f2f2" Padding="10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="PlayVideoButton" Content="🎬 Играть видео" Width="120" Height="32" Margin="0,0,10,0"
                            Click="PlayButtonVideo_Click"
                            ToolTip="Воспроизвести видео через mpv"/>
                    <Button x:Name="PlayAudioButton" Content="🎧 Играть аудио" Width="120" Height="32"
                            Click="PlayButtonAudio_Click"
                            ToolTip="Воспроизвести только звук через mpv"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <Button x:Name="DownloadButton" Content="💾 Скачать" Width="100" Height="32" Margin="0,0,10,0"
                            Click="DownloadButton_Click"
                            ToolTip="Скачать выбранное видео как аудио"/>
                    <Button x:Name="OpenFolderButton" Content="📁 Открыть папку" Width="120" Height="32" Cursor="Hand"
                            Click="OpenFolderButton_Click"
                            ToolTip="Открыть папку с загруженными файлами"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
