<Window x:Class="YouTubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZV Tube v1.1 by DYA" Height="520" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Что ищем на Ютубчике?" FontWeight="Bold" FontSize="14"/>

        <!-- Строка поиска и кнопки в одной строке -->
        <Grid Grid.Row="1" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Поисковое поле по левому краю -->
            <TextBox x:Name="SearchBox" Width="450" Height="30"
                     VerticalAlignment="Center" Margin="0,0,10,0"
                     HorizontalAlignment="Left" FontSize="14"
                     KeyDown="SearchBox_KeyDown"/>

            <!-- Кнопки по правому краю -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SearchButton" Content="🔎 Поиск" Width="100" Height="30" Margin="0,0,10,0"
                        Click="SearchButton_Click" Cursor="Hand"/>
                <Button x:Name="OpenFolderButton" Content="📁 Открыть папку" Width="120" Height="30"
                        Click="OpenFolderButton_Click"/>
            </StackPanel>
        </Grid>

        <TextBlock x:Name="StatusText" Text="Результаты будут отображены после осуществления поиска"
                   Grid.Row="2" Foreground="Red" Margin="0,0,0,10" FontSize="12"/>

        <!-- Список результатов -->
        <Grid x:Name="ResultsContainer" Grid.Row="3">
            <ListView x:Name="ResultsList"
                      SelectionChanged="ResultsList_SelectionChanged"
                      Margin="0,0,0,10"
                      BorderBrush="#ccc" BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="🎬 Название" Width="280" DisplayMemberBinding="{Binding Title}" />
                        <GridViewColumn Header="📺 Канал" Width="180" DisplayMemberBinding="{Binding Uploader}" />
                        <GridViewColumn Header="👁 Просмотры" Width="100" DisplayMemberBinding="{Binding Views}" />
                        <GridViewColumn Header="📅 Дата" Width="180" DisplayMemberBinding="{Binding UploadDate}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- Панель кнопок -->
        <Border Grid.Row="4" Background="#f2f2f2" Padding="10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="PlayVideoButton" Content="🎬 Играть видео" Width="120" Height="32" Margin="0,0,10,0"
                            Click="PlayButtonVideo_Click" Cursor="Hand"/>
                    <Button x:Name="PlayAudioButton" Content="🎧 Играть аудио" Width="120" Height="32"
                            Click="PlayButtonAudio_Click" Cursor="Hand"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <Button x:Name="DownloadButton" Content="💾 Скачать аудио" Width="120" Height="32" Margin="0,0,10,0"
                            Click="DownloadButton_Click" Cursor="Hand"/>
                    <Button x:Name="DownloadVideoButton" Content="📹 Скачать видео" Width="120" Height="32"
                            Click="DownloadVideoButton_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
